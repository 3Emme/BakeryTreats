@using BakeryTreats.Models;
@{
  Layout = "_Layout";
}

<h1>List of Treats</h1>

<h2>Treats</h2>
@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
}
@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId}) </li>
}
<br>
<p>@Html.ActionLink("Add New Treat", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>