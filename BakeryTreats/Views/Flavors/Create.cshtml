@{
  Layout = "_Layout";
}
@model BakeryTreats.Models.Flavor;
<h4>Add a new Flavor</h4>
@using (Html.BeginForm())
{
  @Html.Label("Name:")
  @Html.TextBoxFor(model => model.FlavorName,new {required="required"})
  @Html.Label("Description:")
  @Html.TextBoxFor(model => model.FlavorDescription,new {required="required"})
  <br><br>
  <input type="submit" value="Add new Flavor" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>