@using BakeryTreats.Models;
@{
  Layout = "_Layout";
}

<h1>List of Flavors</h1>

<h2>Flavors</h2>
@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
}
@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId}) </li>
}
<br>
<p>@Html.ActionLink("Add New Flavor", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>